@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
                @if(TempData["Message"] != null){
                <div class="alert alert-danger" role="alert">
                    @TempData["Message"]
                </div>
                }        
                    <form asp-action="Login" asp-controller="Auth" method="post">
                        <div class="mt-3">
                            <label for="">Documento</label>
                            <input type="number" name="Document" class="form-control form-control-lg" required >
                        </div>
                        <div class="mt-3">
                            <label for="">Contrase√±a</label>
                            <input type="password" name="Password" class="form-control form-control-lg" required>
                        </div>
                        <button type="submit" class="btn btn-info bg-info text-white w-100 mt-3">Autenticarme</button>
                    </form>
        </div>
    </div>
</div>
